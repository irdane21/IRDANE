<%= render 'shared/navbar' %>
<div class="website-wrapper">
  <div class="container">
    <div class="row justify-content-center">
      <div class="big-device">
        <% @sites.each do |site| %>
          <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
            <div class="site-card">
              <div class="title-sites">
                <h2><%= site.title %></h2>
              </div>
              <div class="site-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path site.photo, height: 600, width: 1200, crop: :fill %>')">
              </div>
              <div class="description">
                <div class="description-content">
                  <p><%= site.description %></p>
                  <%= link_to "Go visite it!", site.url, target: :_blank, class: "btn btn-card" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="small-device">
        <div class="container">
          <div class="row justify-content-center">
            <% @sites.each do |site| %>
              <div class="col-md-12 col-sm-12 col-xl-12 col-lg-12">
                <div class="site-card-mini">
                  <div class="title-sites-mini">
                    <h2><%= site.title %></h2>
                  </div>
                  <div class="description-mini d-flex justify-content-center d-flex align-items-center ">
                    <div class="description-content">
                      <p><%= site.description %></p>
                      <%= link_to "Go visite it!", site.url, target: :_blank, class: "btn btn-card" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

