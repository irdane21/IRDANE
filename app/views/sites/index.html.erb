<div class="website-wrapper">
  <%= render 'shared/navbar' %>
  <% @sites.each do |site| %>
    <div class="site-card">
      <div id="slider">
        <figure>
          <% site.sitephotos.each do |photo| %>
            <%= cl_image_tag photo.photo %>
          <% end %>
        </figure>
      </div>
      <div class="title-sites">
        <h2><%= site.title %></h2>
      </div>
      <div class="description d-flex justify-content-center d-flex align-items-center ">
        <div class="description-content">
          <p>site.description</p>
          <%= link_to "Go visite it!", site.url, class: "btn btn-card" %>
        </div>
      </div>
    </div>
  <% end  %>
</div>
