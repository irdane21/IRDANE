<%= render 'shared/navbar' %>
<div class="wrapper dark-blue">
  <div class="video-wrapper">
    <div class="channel-header">
      <h3>Creativ Construction</h3>
      <script src="https://apis.google.com/js/platform.js"></script>
      <div class="g-ytsubscribe" data-channelid="UCddE5znXiM2pl15WUtI1_lQ" data-layout="default" data-count="hidden"></div>
    </div>
    <div class="container overflow">
      <%= @creativ.each do |video| %>
        <div class="row">
          <div class="col-md-6">
            <div class="description-video">
              <p><strong><%= video.title %></strong><br><br>
              <%= video.description %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="one-video">
              <div class="display-video">
                <iframe width="560" height="315" src=<%= video.url %> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
