<div class="container">
  <% if current_user.admin? %>

  <div class="d-flex justify-content-center">
    <h2> Welcome Adrien! </h2>
  </div>
  <div class="row">
    <div class="dashboard-card">
      <h3> Add a new creation</h3>
      <div class="col">
        <div class="d-flex justify-content-center">
          <%= link_to "Web Site", new_site_path, class:"btn btn-success" %>
        </div>
      </div>
      <div class="col">
        <div class="d-flex justify-content-center">
          <%= link_to "Graphic Design", new_creation_path, class:"btn btn-success" %>
